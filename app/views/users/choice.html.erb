            <figure class="box2">
             <%= image_tag 'default4.png', size: "100x100",class:"default-image","data-value":4 %>
            </figure>
          </label>
      </div>
    </div>
    <br>

    <div class="row text-center">
        <div class="col-md-2"></div>
