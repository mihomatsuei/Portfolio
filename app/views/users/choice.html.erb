<div class="container" style="margin: 50px auto;">
 <div class="row">
   <div class="col-md-4"></div>
     <div class="col-md-4">
       <h2>キャラクターを選択</h2>
     </div>
    <div class="col-md-4">
      <div class='text-right'>
        <div class="button">
        <%= link_to "もどる", edit_user_path(@user), class: "user_#{@user.id}" %></div>
      </div>
   </div>
 </div>

 <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <%= form_for @user,url: {action: "update"} do |f| %>
        <div class='text-center'>
            <figure class="box2">
            <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "default#{@user.default_image}.png", class: "image-choice"%>
            </figure>
          <br>
          <div class="item_image_btn">
          <%= f.attachment_field :profile_image, id: "choice-image" %>
          <%=f.hidden_field :default_image %>
        </div>
        <br>
          <%= f.submit "これにする", class: "btn btn-success btn-block mt-5" %>
         <% end %>
    </div>
  </div>
</div>
  <br>
  <div class="selection-group">
    <div class="row text-center">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <input id="a" type="radio" name="rate" value="1">
          <label for="a">
            <figure class="box2">
            <%= image_tag 'default1.png', size: "100x100",class:"default-image","data-value":1%>
            </figure>
          </label>
      </div>
      <div class="col-md-2">
        <input id="b" type="radio" name="rate" value="2">
