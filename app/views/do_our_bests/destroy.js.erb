var $btn = $(".<%= @do_our_best_class %> .Heart-Inner-Box-Item-Likes-Icon");
if ($btn.hasClass('HeartAnimation')) {
   $btn.removeClass("HeartAnimation");
} else if($btn.hasClass('exist-heart')){
    $btn.removeClass("exist-heart");
} else {
    $btn.addClass("HeartAnimation");
}
var $link_anchor = $(".<%= @do_our_best_class %> .Heart-Inner-Box-Item-Likes-Icon a")
$link_anchor.attr('href',"<%= @do_our_best_path %>");
$link_anchor.attr('data-method','post');
$(".<%= @do_our_best_class %> .do_our_bests_count").text("<%= @do_our_bests_count %>");