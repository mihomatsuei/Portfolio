<!-- ありがとう機能 -->
 <% if post_comment.thank_you_by?(current_user) %>
	<%= link_to post_comment_thank_yous_path(post_comment), method: :delete, remote: true do %>
	ありがとう

	<i class="fas fa-star" aria-hidden="true" style="color: orange;"></i>
	   <%= post_comment.thank_yous.count %>
  <% end %>
  <% else %>
    <%= link_to post_comment_thank_yous_path(post_comment), method: :post, remote: true do %>
    ありがとう
	<i class="fas fa-star" style="color: gray;"></i>
	   <%= post_comment.thank_yous.count %>
  <% end %>
  <% end %>
