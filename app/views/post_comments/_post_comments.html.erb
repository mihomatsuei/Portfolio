<div class="row">
	<% @post_comments.each do |post_comment| %>
		<div class="col-md-2">

		</div>
	　 <div class="col-md-1">
		  	<figure class="box2">
					<%= link_to user_path(post_comment.user.id) do %>
						<%= attachment_image_tag(@find_post.user, :profile_image, size: "100x100", fallback: "default#{post_comment.user.default_image}.png") %>
						<br>
						<%= post_comment.user.name %>
					<% end %>
		  	</figure>
		</div>

	  <div class="col-md-8">
	    <div class="nomadBox_deco82 test ">
	      <table class="table-borderless">
          <tbody>
          	<%= post_comment.comment %>
          	<tr>
	          	<th style="width:70px;">
		        	</th>
		        	<th>
		        	<div class="post_comment<%= @post_comment.id %>">
                    <%= render 'detail', find_post: @find_post,post_comments:@post_comments,user:@post_comment.user %>
                    </div>
                </th>
                    <th>
		          	<div class='btn-sticky'>
		            <% if post_comment.user == current_user%>
		            <%= link_to "削除", post_comment_path(post_comment), method: :delete %>
		            	<% end %>
		          	</div>
		        	</th>
		     		</tr>
		   		</tbody>
	    	</table>
			</div>
	  </div>
	<% end %>
	</div>