<!-- 新規投稿がされるとこのページが表示される -->
<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		  <div class="col-md-8">
		  		<!-- 投稿のタイトル -->
			<h2><%= link_to @find_post.title, post_path(@find_post.id) %></h2>
		  </div>
		<div class="col-md-2"></div>
	</div>
     <br>
             <!-- 投稿の本文 -->
	<div class="row">
	  <div class="col-md-2"></div>
		  <div class="col-md-1">
		     <figure class="box2">
				<%= link_to user_path(@find_post.user.id) do %>
				<%= attachment_image_tag(@find_post.user, :profile_image, size: "100x100", fallback: "default1.png") %>
				<%= @find_post.user.name %>
				<% end %>
			</figure>
		  </div>
		  <div class="col-md-9">
            <div class="nomadBox_deco8">
		      <div class="post_<%= @find_post.id %>">
                <%= render 'detail', find_post: @find_post,post_comments:@post_comments,user:@user %>
              </div>
	       </div>
		 </div>
    </div>

<!-- コメント表示欄作成 -->
	<!-- ポストコメントモデルに入っている中でpost_idが一緒のもの全て -->
	<div class="row">
      <div class="col-md-2"></div>
	　  <div class="col-md-1">
		  <figure class="box2">
		    <% @post_comments.each do |post_comment| %>
			<%= link_to user_path(@find_post.user.id) do %>
			<%= attachment_image_tag(@find_post.user, :profile_image, size: "100x100", fallback: "default1.png") %>
			<br>
			<%= post_comment.user.name %>
			<% end %>
		  </figure>
		</div>
	  <div class="col-md-9">
	    <div class="nomadBox_deco82">
	      <table class="table-borderless">
            <tbody>
              <tr>
	            <th>
		          <%= post_comment.comment %>
		        </th>
		          <div class='text-center'>
		          <% if post_comment.user == current_user%>
		        <%= link_to "Destroy", post_comment_path(post_comment), method: :delete, class: "btn-sm btn-danger pull-right" %>
		          </div>
		        <% end %>
		        <% end %>
		     </tr>
		   </tbody>
	      </table>
		</div>
	  </div>
	</div>

			<!-- コメント欄作成 -->
	<div class="row">
	  <div class="col-md-2"></div>
	  <div class="col-md-8">
	    <%= form_for [@post_comment] do |f| %>
		<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
	  </div>
		<%= f.hidden_field :post_id, :value => @find_post.id %>
		<%= f.submit "送信", class: "btn-sm btn-danger " %>
		<% end %>
	  <div class="col-md-2"></div>
	</div>
</div>