<!-- 新規投稿がされるとこのページが表示される -->
<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		  <div class="col-md-8">
		  		<!-- 投稿のタイトル -->
			<h2><%= link_to @find_post.title, post_path(@find_post.id) %></h2></div>
			   <div class="col-md-2"></div>
			</div>
             <br>
             <!-- 投稿の本文 -->
			   <div class="row">
		          <div class="col-md-2"></div>
		          	<div class="col-md-1">

		         	<figure class="box2">
						<%= link_to user_path(@find_post.user.id) do %>
						<%= attachment_image_tag(@find_post.user, :profile_image, size: "100x100", fallback: "default1.png") %>
						<%= @find_post.user.name %>
						<% end %>
					  </figure>
					 </div>
		           <div class="col-md-9">
					<!-- ブラウザのurlと同じidのpostのデータが欲しい @find_postはデータを持ったpost-->
					<!-- 本の内容 -->
				<div class="nomadBox_deco8">
				<%= @find_post.body %><br>
					<!-- いいね機能 -->
						<!-- ifにかけるのは投稿されたトピック@postだとpost.new（空の投稿)だからいいねが反映されない -->

						  <div class='text-right'>
							<% if @find_post.do_our_best_by?(current_user) %>

							<%= link_to post_do_our_bests_path(@find_post), method: :delete do %>
							<i class="far fa-laugh-squint"></i>
							<%= @find_post.do_our_bests.count %>
							<% end %>
							<% else %>
							<%= link_to post_do_our_bests_path(@find_post), method: :post do %>
							<i class="far fa-laugh-squint"></i>
							頑張ろう！
							<% end %>
							<% end %>
					<!-- ポストコメントモデルに入っている中でpost_idが一緒のもののコメント数を表示 -->
					コメント数:<%= @post_comments.count %>件
					<!-- もし、本の投稿をしたユーザー(@user = @find_post.user)と現在ログインしているユーザー(current_user)が一致していたらEditとDestroyを表示 -->
					<% if @user == current_user %>
					<%= link_to "Edit", edit_post_path(@find_post), class: "btn-sm btn-success edit_post_#{@find_post.id}" %>
					<%= link_to "Destroy", post_path(@find_post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_post_#{@find_post.id}" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
           
<!-- コメント表示欄作成 -->
	<!-- ポストコメントモデルに入っている中でpost_idが一緒のもの全て -->
			<div class="row">
                  <div class="col-md-2"></div>
		          	<div class="col-md-1">
		          		<figure class="box2">
					<% @post_comments.each do |post_comment| %>
							<%= link_to user_path(@find_post.user.id) do %>
							<%= attachment_image_tag(@find_post.user, :profile_image, size: "100x100", fallback: "default1.png") %>
						<br>
							<%= post_comment.user.name %>
							<% end %>
					   </figure>
				     </div>
				   <div class="col-md-9">
					<div class="nomadBox_deco82">
							<%= post_comment.comment %>
						<% if post_comment.user == current_user%>
							<%= link_to "Destroy", post_comment_path(post_comment), method: :delete, class: "btn-sm btn-danger pull-right" %>
						<% end %>
						<% end %>
					</div>
				 </div>
			  </div>

			<!-- コメント欄作成 -->
			<div class="row">
				<div class="col-md-2"></div>
				<div class="col-md-8">
			<%= form_for [@post_comment] do |f| %>
					<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
				</div>
			<%= f.hidden_field :post_id, :value => @find_post.id %>
			<%= f.submit "送信", class: "btn-sm btn-danger " %>
			<% end %>
			<div class="col-md-2"></div>
			</div>

			<!-- コメント欄作成 -->
	   </div>