<!-- 新規投稿がされるとこのページが表示される -->
<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		  <div class="col-md-6">
		  		<!-- 投稿のタイトル -->
			<h2><%=  @find_post.title %></h2>
		  </div>
		  <div class="col-md-2"></div>
		<div class="col-md-1">
			<div class="button">
			<%= link_to 'もどる', posts_path %>
		    </div>
		</div>
	</div>
     <br>
             <!-- 投稿の本文 -->
	<div class="row">
	  <div class="col-md-2"></div>
		  <div class="col-md-1">
		     <figure class="box2">
				<%= link_to user_path(@find_post.user.id) do %>
				<%= attachment_image_tag(@find_post.user, :profile_image, size: "100x100", fallback: "default#{@user.default_image}.png") %>
				<%= @find_post.user.name %>
				<% end %>
			</figure>
		  </div>
		  <div class="col-md-8">
            <div class="nomadBox_deco8">
            	<%= @find_post.body %>
		      <div class="post_<%= @find_post.id %>">
                <%= render 'detail', find_post: @find_post,post_comments:@post_comments,user:@user %>
              </div>

	       </div>
		 </div>
    </div>


<!-- コメント表示欄作成 -->

	<div class="row">
	<% @post_comments.each do |post_comment| %>
		<div class="col-md-2">

		</div>
	　 <div class="col-md-1">
		  	<figure class="box2">
					<%= link_to user_path(post_comment.user.id) do %>
						<%= attachment_image_tag(@find_post.user, :profile_image, size: "100x100", fallback: "default#{post_comment.user.default_image}.png") %>
						<br>
						<%= post_comment.user.name %>
					<% end %>
		  	</figure>
		</div>

	  <div class="col-md-8">
	    <div class="nomadBox_deco82 test ">
	      <table class="table-borderless">
          <tbody>
          	<%= post_comment.comment %>
          	<tr>
	          	<th style="width:70px;">
		          	
		        	</th>
		        	<th>
		        	<div class="post_comment<%= @post_comment.id %>">
                    <%= render 'detail', find_post: @find_post,post_comments:@post_comments,user:@post_comment.user %>
                    </div>
                </th>
                    <th>
		          	<div class='btn-sticky'>
		            <% if post_comment.user == current_user%>
		            <%= link_to "削除", post_comment_path(post_comment), method: :delete %>
		            	<% end %>
		          	</div>
		        	</th>
		     		</tr>
		   		</tbody>
	    	</table>
			</div>
	  </div>
	<% end %>
	</div>

			<!-- コメント欄作成 -->
	<div class="row">
	  <div class="col-md-3"></div>
	  <div class="col-md-7">
	    <%= form_for [@post_comment] do |f| %>
		<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをこちらに" %>
	  </div>
		<%= f.hidden_field :post_id, :value => @find_post.id %>
		<%= f.submit "送信", class: "btn btn-outline-secondary " %>
		<% end %>
	  <div class="col-md-2"></div>
	</div>
</div>