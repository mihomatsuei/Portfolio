
   <!-- 頑張ろうね機能 -->
<table class="table-borderless">
  <tbody>
      <tr>
      	<th style="width:340px;"></th>
	    <th>
          <% if exist_do_our_best %>
          <div class="Heart-Inner-Box-Item-Likes-Icon exist-heart">
			<%= link_to "", do_our_best_path, method: :delete, remote: true %>
			<span class="do_our_bests_count">
			  <%= do_our_best_count %>
			</span>
          </div>
		  <% else %>
          <div class="Heart-Inner-Box-Item-Likes-Icon">
		    <%= link_to "",do_our_best_path, method: :post, remote: true %>
			<span class="do_our_bests_count">
			  <%= do_our_best_count %>
			</span>
          </div>
   		  <% end %>

		</th>
　　<!-- ありがとう機能 -->
        <th style="width:90px;">
　　　　　　<% if find_post.thank_you_by?(current_user) %>
			<%= link_to post_thank_yous_path(find_post), method: :delete, remote: true do %>
			ありがとう!

			<i class="fas fa-laugh-beam"></i>
			   <%= find_post.thank_yous.count %>
		  <% end %>
		  <% else %>
		    <%= link_to post_thank_yous_path(find_post), method: :post, remote: true do %>
		    ありがとう!
			 <i class="far fa-laugh-beam"></i>
		  <% end %>
		  <% end %>
		</th>
		
		<!-- もし、投稿をしたユーザー(@user = @find_post.user)と現在ログインしているユーザー(current_user)が一致していたらEditとDestroyを表示 -->
		<th>

		<% if user == current_user && is_post %>
		  <div class='btn-sticky2'>
		<%= link_to "編集", edit_post_path(find_post) %>
	      </div>
	      <div class='btn-sticky'>
		<%= link_to "削除", post_path(find_post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
		  </div>
		<% end %>
	    </th>
	　 </tr>
　　</tbody>
</table>